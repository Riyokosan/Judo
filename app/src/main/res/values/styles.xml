<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#000000</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#f36b2716</item>
    </style>

    <style name="sport">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#f17014</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="teamName">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#2841ff</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="scores">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">#05942b</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>
